<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SergioDelgadoProyecto.formGasolinera.Gasolinera">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label></Label>
                <Label></Label>
             <Label Text="Introduce Importe :" Margin="10,0,0,0" />
                <Entry x:Name="envioImporte" Placeholder="Euros" WidthRequest="300" HorizontalOptions="StartAndExpand"  />

                <Button Text="Enviar" Clicked="SendEmailAsync" BackgroundColor="Crimson" TextColor="White" WidthRequest="300" HorizontalOptions="CenterAndExpand" />
                <Button Text="Seleccione la Imagen" x:Name="fileButton" Clicked="File" WidthRequest="300" HorizontalOptions="CenterAndExpand"/>
                <Label Text="Imagen : " Margin="10,0,0,0" x:Name="fileLabel"/>
                <Button Text="Enviar Imagen" Clicked="enviarCorreo" BackgroundColor="Crimson" TextColor="White" WidthRequest="300" HorizontalOptions="CenterAndExpand"/>
                <Label></Label>
                <Image Source="gasolinera.png" />




            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>